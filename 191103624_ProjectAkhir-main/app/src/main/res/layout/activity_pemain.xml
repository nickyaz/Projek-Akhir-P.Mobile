<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/pict"
    tools:context=".PemainActivity">

    <TextView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Form Biodata Pemain Voli"
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#FFFF"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nomor Pemain"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="left"
        android:textColor="#FFFF"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/nomor"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Nomor Punggung"
        android:textSize="18dp"
        android:textColor="#FFFF"
        android:textColorHint="#dde1e7"
        android:paddingLeft="10dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Pemain"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="left"
        android:textColor="#FFFF"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Nama Lengkap"
        android:textSize="18dp"
        android:textColor="#FFFF"
        android:textColorHint="#dde1e7"
        android:paddingLeft="10dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jenis Kelamin"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="left"
        android:textColor="#FFFF"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/jk"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Jenis Kelamin"
        android:textSize="18dp"
        android:textColor="#FFFF"
        android:textColorHint="#dde1e7"
        android:paddingLeft="10dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Posisi Pemain"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="left"
        android:textColor="#FFFF"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/posisi"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Posisi"
        android:textSize="18dp"
        android:textColor="#FFFF"
        android:textColorHint="#dde1e7"
        android:paddingLeft="10dp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnsimpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="TAMBAH"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="4dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btntampil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAMPIL"
            android:padding="10dp"
            android:background="@drawable/button"
            android:textColor="#FFFFFF"
            android:layout_marginRight="4dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDIT"
            android:padding="10dp"
            android:background="@drawable/button"
            android:textColor="#FFFFFF"
            android:layout_marginRight="4dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnhapus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HAPUS"
            android:padding="10dp"
            android:background="@drawable/button"
            android:textColor="#FFFFFF"
            android:layout_marginRight="4dp"
            />
    </LinearLayout>
</LinearLayout>